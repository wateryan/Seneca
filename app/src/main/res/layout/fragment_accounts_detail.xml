<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <EditText
                android:id="@+id/service_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/password"
                android:layout_alignStart="@+id/password"
                android:layout_below="@+id/password"
                android:layout_gravity="center_horizontal"
                android:hint="Service Name"
                android:singleLine="true" />

            <EditText
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:hint="username@host"
                android:inputType="textEmailAddress"
                android:singleLine="true" />

            <EditText
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/username"
                android:layout_below="@+id/username"
                android:ems="10"
                android:hint="password"
                android:inputType="textPassword"
                android:singleLine="true" />

            <EditText
                android:id="@+id/host"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/service_name"
                android:layout_alignStart="@+id/service_name"
                android:layout_below="@+id/service_name"
                android:layout_gravity="center_horizontal"
                android:hint="host"
                android:singleLine="true" />

            <Button
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/port"
                android:layout_below="@+id/port"
                android:layout_gravity="center_horizontal"
                android:text="Save" />

            <Button
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/port"
                android:layout_alignTop="@+id/save"
                android:layout_gravity="center_horizontal"
                android:layout_toStartOf="@+id/save"
                android:text="Cancel" />

            <EditText
                android:id="@+id/port"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/host"
                android:layout_below="@+id/host"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="port"
                android:inputType="number"
                android:singleLine="true" />

        </RelativeLayout>
    </FrameLayout>

</RelativeLayout>